<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="match_parent" android:padding="10dp">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wprowadź nazwę produktu:"
                android:id="@+id/textView" android:layout_gravity="left|center_vertical" android:textSize="16dp"
                android:minWidth="200dp" android:layout_marginBottom="10dp"/>
        <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/productNameEditText" android:layout_gravity="left|center_vertical"
                android:layout_marginBottom="10dp"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="Ilość:" android:id="@+id/textView1"
                      android:layout_gravity="left|center_vertical" android:textSize="16dp"
                      android:layout_marginRight="20dp"/>
            <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ilosc_spinner"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
                      android:layout_height="wrap_content" android:id="@+id/linearLayout">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Jednostka"
                      android:id="@+id/textView2" android:layout_gravity="left|center_vertical" android:textSize="16dp"
                      android:layout_marginRight="20dp"/>
            <Spinner android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/jednostka_spinner"
                    />
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:gravity="center|bottom">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zapisz"
                android:id="@+id/buttonSaveProd" android:layout_gravity="center" android:minWidth="120dp"/>
    </RelativeLayout>
</LinearLayout>