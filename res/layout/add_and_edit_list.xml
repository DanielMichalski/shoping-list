<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="match_parent" android:padding="10dp">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Podaj nazwę listy zakupów:"
            android:id="@+id/textView" android:layout_gravity="left|center_vertical" android:textSize="16dp"
            android:minWidth="200dp" android:layout_marginBottom="10dp"/>
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listNameEditText" android:layout_gravity="left|center_vertical"
            android:layout_marginBottom="10dp" android:lines="1" android:maxLines="1"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zapisz"
            android:id="@+id/buttonSave" android:layout_gravity="center" android:minWidth="120dp"/>
</LinearLayout>